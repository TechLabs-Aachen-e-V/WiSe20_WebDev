<% layout('layouts/boilerplate') %>
    <div class="card">
        <div class="card-body" id="container-show">

            <form action="/events" method="POST">


                <div class="card" style="width: 70rem;" id="card-show">
                    <img class="card-img-top" src="<%= event.img_url %>" alt="Card image cap">
                    <div class="card-body">
                        <h1 class="card-text">
                            <%= event.title %>
                        </h1>
                        <br>
                        <p class="card-text">
                            <%= event.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <h4>Where: <%= event.location %>
                            </h4>
                        </li>
                        <li class="list-group-item">
                            <h4>When: <%= event.date %>
                            </h4>
                        </li>

                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Link zum Veranstalter</a>

                    </div>
                </div>

        </div>
    </div>
    <br>
    <a href="/events" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">All Events</a>
    <a href="/events/<%= event._id %>/edit" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Edit
        Event</a>
    <form action="/events/<%= event._id %>" method="DELETE">
        <button class="btn btn-danger btn-lg active">Delete</button>
    </form>